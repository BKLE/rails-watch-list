<%# banner %>
<div class="home-banner">
  <h1>Save any kind of movies!</h1>

</div>

<%# list cards %>

  <div class="list-banner">
    <h2>My Lists</h2>
    <div class="btn-create">
      <%= link_to "Create a list", new_list_path, class: "btn btn-success" %>
      </div>
    </div>
    <br>
    <hr>
<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
     <div class="col-4-sm list-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?movies)">
      <h3><%= link_to "#{list.name}", list_path(list)  %></h3>
     </div>
  <% end %>
  </div>
</div>
